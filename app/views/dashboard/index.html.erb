<table style="border: 1px solid black; margin:auto">
	<thead>
		<tr style="border-bottom: 1px solid black">
			<th style="border-right:1px solid black; width:163px">
				course name
			</th>
			<th style="border-right:1px solid black; width:119px">
				spaces left
			</th>
			<th style="border-right:1px solid black; width:137px">
				payments taken
			</th>
			<th style="border-right:1px solid black; width:115px">
				booked people
			</th>
		</tr>
	</thead>
	<tbody>
		<% @courses.each do |course| %>
			<tr>
				<td style="text-align:center">
					<%= course.name %>
				</td>
				<td style="text-align:center">	
					<%= course.quantity %>
				</td>
				<td style="text-align:center">
					<%= course.payments.count %>
				</td>
				<td>
					<%= link_to('course', course_course_details_path(course.id)) %>
				</td>
			</tr>			
		<% end %>
	</tbody>

</table>

    <%= image_tag @user.avatar.url(:medium) %>
    <%= image_tag @user.avatar.url(:thumb) %>