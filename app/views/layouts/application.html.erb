<!DOCTYPE html>
<html>
<head>
  <title>CommunityMarketplace</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "https://js.stripe.com/v1/", "application", "data-turbolinks-track" => true %>
	<%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>
  <%= csrf_meta_tags %>  
</head>
<body>
	<ul class="nav nav-tabs">
	  <li role="presentation" class="active"><a href="#">Home</a></li>	  	
	  <% if member_signed_in? %>
	  	<li role="presentation">
			  <a href="/courses/new">New course</a>
			</li>
			<li role="presentation">
		  	<%= link_to('Dashbaord', user_dashboard_index_path(current_member)) %>
		  </li>
	  <% end %>
	  <% if user_signed_in? %>
		  <% if current_user.try(:type) == "Member" %>
			  <li role="presentation">
			  	<a href="/courses/new">New course</a>
			  </li>			  
			<% else %>
				 <li role="presentation"><%= link_to "Profile", current_user %></li>
	  	<% end %>
	  <% end %>
	  <li role="presentation">
	  	<a href="/courses">All Courses</a>
	  </li>	  
	  <% if user_signed_in? %>		  
		  <li role="presentation" style="float:right">
		  	<%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
		  </li>
		  <li role="presentation" style="float:right">
		  	<%= link_to('Edit registration', edit_user_registration_path) %>
		  </li>
		<% else %>
			<li role="presentation" style="float:right">
	  		<%= link_to('Login', new_user_session_path)  %>	  		
	  	</li>
	  	<li role="presentation" style="float:right">
	  		<%= link_to('Register', new_user_registration_path)  %>	  		
	  	</li>	  	
	  <% end %>
	  <% if member_signed_in? %>		  
		  <li role="presentation" style="float:right">
		  	<%= link_to('Logout member', destroy_member_session_path, :method => :delete) %>
		  </li>
		  <li role="presentation" style="float:right">
		  	<%= link_to('Edit registration member', edit_member_registration_path) %>
		  </li>
		<% else %>
			<li role="presentation" style="float:right">
	  		<%= link_to('Login member', new_member_session_path)  %>	  		
	  	</li>
	  	<li role="presentation" style="float:right">
	  		<%= link_to('Register member', new_member_registration_path)  %>	  		
	  	</li>	  	
	  <% end %>
	</ul>
	
	<p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p>

<%= yield %>

</body>
</html>
