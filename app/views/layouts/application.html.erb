<!DOCTYPE html>
<html>
<head>
  <title>CommunityMarketplace</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "https://js.stripe.com/v1/", "application", "data-turbolinks-track" => true %>
	<%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>
  <%= csrf_meta_tags %> 
</head>
<body>
	<div id="container">
    <div id="left">      
      <h2 style="color:#89b160; text-align:center">PICKACOURSE</h2>  
      <div class="account">   
        <% if signed_in? %>     
          <%= link_to('LOG OUT', destroy_user_session_path, :method => :delete, :class => "account-buttons login") %>
        <% else %>
          <%= link_to('LOG IN', new_user_session_path,:class => "account-buttons login") %>          
          <a class="account-buttons signup" href="/users"> SIGN UP</a>              
        <% end %>        
      </div>
    </div>
    <div id="right">      
			<%= yield %>	      	      
    </div>    
  </div>
	</div>
</body>
</html>
